{{#if addNewComment}}
  <div class="review">
    <h1>New Review</h1>
    <form>
      <div class="form-group">
        {{input value=user id="user" placeholder="name"}}
      </div>
      <div class="form-group">
        {{input value=date id="date" placeholder="date"}}
      </div>
      <div class="form-group">
        {{input value=content id="content" placeholder="content"}}
      </div>
      <button {{action 'saveReview'}}>Save</button>
    </form>
  </div>
{{else}}
<a><p{{action 'commentFormShow'}}>post a comment<i class="large sort descending icon"></i></p></a>
{{/if}}
