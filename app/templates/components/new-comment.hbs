  <div id="review-form">
    <div class="review">
      <h1>Leave a comment</h1>
      <form>
        <div class="form-group">
          {{input value=user class="form-control" id="user" placeholder="name"}}
        </div>
        <div class="form-group">
          {{input value=date class="form-control" id="date" placeholder="date"}}
        </div>
        <div class="form-group">
          {{textarea class="form-control" value=content id="content" placeholder="content"}}
        </div>
        <button class="btn btn-default center-block" {{action 'saveComment'}}>Post</button>
      </form>
    </div>
  </div>
